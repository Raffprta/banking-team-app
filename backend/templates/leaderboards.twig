{% extends "base.twig" %}

{% block head %}
    {{ parent() }}
    <script src="js/play.js"></script>
    <script src="https://apis.google.com/js/client.js"></script>
    <script src="https://apis.google.com/js/client:platform.js" async defer></script>
    <meta name="google-signin-clientid" content="689728249892-r4l3ip9nrblqkun6aql2bsbrsjr21ksj.apps.googleusercontent.com" />
    <meta name="google-signin-cookiepolicy" content="single_host_origin" />
    <meta name="google-signin-scope" content="https://www.googleapis.com/auth/games" />
{% endblock %}

{% block content %}
    <div class="page-header">
    <h1 style="display:inline">View the Leaderboard</h1>
    <span id="signinButton" class="pull-right">
	  <span
		class="g-signin"
		data-callback="signinCallbackLeaderboard"
		data-clientid="689728249892-r4l3ip9nrblqkun6aql2bsbrsjr21ksj.apps.googleusercontent.com"
		data-cookiepolicy="single_host_origin"
		data-scope="https://www.googleapis.com/auth/plus.login"
		>
	  </span>
	</span>
    <br><br>
    <p><b>Note: this page requires third party cookies to be enabled on your browser as well as a validated tester account, for testing purposes
	      we reccommend to use the details provided for team.19.service@gmail.com as our app is unpublished.</b>
       No private information relating to any bank details or account information is requested or shared, this is purely for leaderboard purposes
       which relate to in-app achievements. The user has an option whether to sign in within the app and
       use Google Play services. The below will show the current all time leaderboard list.
       </p>
    </div>
    
    <table class="table table-condensed" id="leaderboardTable">
		<thead>
		<tr>
		  <th class="col-md-2">Rank</th>
		  <th class="col-md-3">Forename</th>
		  <th class="col-md-3">Surname</th>
		  <th class="col-md-3">Google Plus Profile</th>
		  <th class="col-md-2">Score</th>
		</tr>
		</thead>   
    </table>
	
	<h4 id="loading">Leaderboard currently loading, please wait... ensure you are signed in via clicking the signin button.</h4>
    
{% endblock %}


