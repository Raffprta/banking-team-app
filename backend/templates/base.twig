<!DOCTYPE html>
<html>
<head>
    {% block head %}
        <base href="{{ baseURL }}">
        <title>Lloyds Banking App - {% block title %}{% endblock %}</title>
        <meta charset="UTF-8">

        {# Custom styles #}
        <link rel="stylesheet" href="/css/style.css">

        {# Bootstrap includes, library offered by: http://getbootstrap.com #}
        <link rel="stylesheet" href="/css/bootstrap.min.css">
        <link rel="stylesheet" href="/css/bootstrap-theme.min.css">

    {% endblock %}
</head>

<body>
    {# Contains top menu #}
    <header>
        <div class="row">
            <div class="logo col-md-3">
                <a href="/">
                    <img class="img-logo" alt="Application Logo" title="Application Logo" src="images/logo.gif"/>
                </a>
            </div>
            <nav class="login col-md-6 col-md-offset-3 text-right">
                <div class="link-container">

                    {# If a user is logged in -- currently assuming we only have one state of login user levels #}
                    {% if loggedInUser %}
                        <a href="/achievements">Achievements</a>
                        <a href="/leaderboards">Leaderboards</a>
                        {% if loggedInUser.accessLevel == constant('ACCESS_LEVEL_ADMINISTRATOR') %}
                            <a href="/admin"><span class="glyphicon glyphicon-cog"></span> Admin Tools</a>
                        {% endif %}
                        <a href="/logout" id="logout"><span class="glyphicon glyphicon-log-out"></span> Logout</a>
                    {% else %}
                        <a href="/about">About</a>
                        <a href="#features">Features</a>
                        <a href="/login" id="login"><span class="glyphicon glyphicon-log-in"></span> Login</a>
                    {% endif %}
                </div>
            </nav>
        </div>
    </header>

    <section class="container">
        {# Error messages #}
        {% if errorMessages %}
            <div id="error-messages">
                <div class="row">
                    <div class="col-md-6 col-md-offset-3">
                        {% for errorMessage in errorMessages %}
                            <div class="alert alert-danger" role="alert">
                                <p><span class="glyphicon glyphicon-info-sign"></span> {{ errorMessage }}</p>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% endif %}

        {# Success messages #}
        {% if successMessages %}
            <div id="success-messages">
                <div class="row">
                    <div class="col-md-6 col-md-offset-3">
                        {% for successMessage in successMessages %}
                            <div class="alert alert-success" role="alert">
                                <p><span class="glyphicon glyphicon-check"></span> {{ successMessage }}</p>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% endif %}

        {# Information messages #}
        {% if infoMessages %}
            <div id="info-messages">
                <div class="row">
                    <div class="col-md-6 col-md-offset-3">
                        {% for infoMessage in infoMessages %}
                            <div class="alert alert-info" role="alert">
                                <p><span class="glyphicon glyphicon-info-sign"></span> {{ infoMessage }}</p>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% endif %}

        {% block content %}{% endblock %}
    </section>

    <footer>
        {% block footer %}
            <div class="contact row">
                <div class="col-md-6">
                    <ul>
                    <li>Contact us: <a href="mailto:csc2-team19@ncl.ac.uk">csc2-team19@ncl.ac.uk</a></li>
                    <li>Contact Lloyds: <a href="http://www.lloydsbank.com/contact-us.asp">http://www.lloydsbank.com/</a></li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <ul>
                        <li>Legal: <a href="legal">Terms and Conditions</a></li>
                        <li>Meet the: <a href="team">Team</a></li>
                    </ul>
                </div>
            </div>
        {% endblock %}
    </footer>

    {# JQuery & Bootstrap scripts #}
    <script src="/js/jquery-2.1.3.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    {% block scripts %}
    {% endblock %}

</body>
</html>