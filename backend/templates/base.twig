<!DOCTYPE html>
<html>
<head>
    {% block head %}
        <base href="{{ baseURL }}">
        <title>{% block title %}{% endblock %}</title>
        <meta charset="UTF-8">

        {# Custom styles #}
        <link rel="stylesheet" href="css/style.css">

        {# Bootstrap includes, library offered by: http://getbootstrap.com #}
        <link rel="stylesheet" href="css/bootstrap.min.css">
        <link rel="stylesheet" href="css/bootstrap-theme.min.css">

    {% endblock %}
</head>

<body>
    {# Contains top menu #}
    <header>
        <div class="row">
            <div class="logo col-md-3">
                <a href="index.php">
                    <img class="img-logo" alt="Application Logo" title="Application Logo" src="images/logo.gif"/>
                </a>
            </div>
            <nav class="login col-md-6 col-md-offset-3 text-right">
                <div class="link-container">

                    {# If a user is logged in -- currently assuming we only have one state of login user levels #}
                    {% if loggedInUser %}
                        <a href="achievements.php">Achievements</a>
                        <a href="leaderboards.php">Leaderboards</a>
                        <a href="logout" id="logout"><span class="glyphicon glyphicon-log-out"></span> Logout</a>
                    {% else %}
                        <a href="about.php">About</a>
                        <a href="#features">Features</a>
                        <a href="login" id="login"><span class="glyphicon glyphicon-log-in"></span> Login</a>
                    {% endif %}
                </div>
            </nav>
        </div>
    </header>

    <section class="container">
        {% block content %}

        {% endblock %}
    </section>

    <footer>
        {% block footer %}
            <div class="contact row">
                <div class="col-md-6">
                    <ul>
                    <li>Contact us: <a href="mailto:csc2-team19@ncl.ac.uk">csc2-team19@ncl.ac.uk</a></li>
                    <li>Contact Lloyds: <a href="http://www.lloydsbank.com/contact-us.asp?WT.ac=HHW2B0512">http://www.lloydsbank.com/</a></li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <ul>
                        <li>Legal: <a href="legal.php">Terms and Conditions</a></li>
                        <li>Meet the: <a href="team.php">Team</a></li>
                    </ul>
                </div>
            </div>
        {% endblock %}
    </footer>

    {# JQuery & Bootstrap scripts #}
    <script src="js/jquery-2.1.3.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    {% block scripts %}
    {% endblock %}

</body>
</html>