{% extends "base.twig" %}

{% block title %}Error{% endblock %}

{% block content %}
    <div class="page-header">
        <h1>Error</h1>
    </div>
    <div class="alert alert-danger" role="alert">
        <p>{{ errorMessage }}</p>
    </div>
{% endblock %}