<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/background">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#85858585"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="1dp"
        android:paddingTop="1dp"
        android:layout_marginBottom="23dp"
        android:layout_above="@+id/gridLayout2"
        android:layout_alignLeft="@+id/gridLayout2"
        android:layout_alignStart="@+id/gridLayout2"
        android:id="@+id/gridgrid">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffffff"
            android:id="@+id/gridLayout2"
            android:layout_row="0"
            android:layout_column="0"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="100dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/acc_current"
                android:id="@+id/textView6"
                android:layout_row="0"
                android:layout_column="0"
                android:textColor="@color/lloyds_lightergreen" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/acc_sort_code_number_filler"
                android:id="@+id/textView7"
                android:layout_column="0"
                android:layout_row="1" />

            <Space
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_column="0"
                android:layout_row="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/acc_funds_filler"
                android:id="@+id/textView8"
                android:layout_row="3"
                android:layout_column="0"
                android:textColor="#ff3f3f3f" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/acc_avail_funds_filler"
                android:id="@+id/textView9"
                android:layout_row="4"
                android:layout_column="0"
                android:textColor="@color/lloyds_lightgreen" />
        </GridLayout>
    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#85858585"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="1dp"
        android:paddingTop="1dp"
        android:id="@+id/gridLayout2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="186dp">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffffff"
            android:id="@+id/gridLayout"
            android:layout_row="0"
            android:layout_column="0"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="100dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/acc_saving_filler"
                android:id="@+id/textView10"
                android:layout_row="0"
                android:layout_column="0"
                android:textColor="@color/lloyds_lightergreen" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/acc_sort_code_number_filler"
                android:id="@+id/textView_savings_sort_code"
                android:layout_column="0"
                android:layout_row="1" />

            <Space
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_column="0"
                android:layout_row="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/acc_funds_filler"
                android:id="@+id/textView12"
                android:layout_row="3"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/acc_avail_funds_filler"
                android:id="@+id/textView13"
                android:layout_row="4"
                android:layout_column="0"
                android:textColor="@color/lloyds_lightgreen" />

        </GridLayout>
    </GridLayout>

</RelativeLayout>