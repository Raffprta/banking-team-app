<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/triangle"
        android:layout_gravity="right"
        android:layout_marginRight="30dp" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/lloyds_darkgreen">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="This is the placeholder text which can be changed via appropriate call to its mutator method. The text is displayed to the screen and relates information to the user about each individual part of the application."
            android:id="@+id/helpTextView"
            android:padding="20dp"
            android:textColor="#FFFFFF" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dismiss"
            android:id="@+id/dismissButton"
            android:layout_gravity="center"
            android:background="@color/lloyds_lightergreen"
            android:layout_marginBottom="15dp"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>

