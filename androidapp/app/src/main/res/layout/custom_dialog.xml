<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/lloyds_darkgreen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/customText"
        android:padding="20dp"
        android:textColor="#FFFFFF"
        android:text="This is the placeholder text which can be changed via appropriate call to its mutator method. The text is displayed to the screen and relates information to the user about each individual part of the application." />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dismiss"
        android:id="@+id/customDismissButton"
        android:layout_gravity="center"
        android:background="@color/lloyds_lightergreen"
        android:layout_marginBottom="15dp"
        android:textColor="#FFFFFF" />
</LinearLayout>


