<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/triangle"
        android:layout_gravity="right"
        android:layout_marginRight="30dp" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/lloyds_darkgreen">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Tap SET GOALS to set up personal goals"
            android:id="@+id/helpTextView"
            android:paddingLeft="15dp"
            android:paddingTop="20dp"
            android:paddingBottom="15dp"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Tap CANCEL to go back to the previous page"
            android:id="@+id/textView60"
            android:padding="15dp"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Tap RESET to reset all goals"
            android:id="@+id/textView66"
            android:padding="15dp"
            android:textColor="#FFFFFF" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dismiss"
            android:id="@+id/dismissButton"
            android:layout_gravity="center"
            android:background="@color/lloyds_lightergreen"
            android:layout_marginBottom="15dp"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>