<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    android:layout_centerHorizontal="true"
    android:layout_alignParentTop="true"
    android:background="@drawable/background">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/make_transfer"
            android:id="@+id/textView46"
            android:layout_gravity="center_horizontal|right"
            android:layout_marginTop="60dp"
            android:textColor="@color/lloyds_lightergreen"
            android:layout_marginRight="20dp" />
    <view
        class="android.support.v7.widget.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/transferFundsCardView"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/from"
                    android:id="@+id/transferFrom"
                    android:layout_column="0"
                    android:textColor="@color/lloyds_lightergreen" />
                <Spinner
                    android:id="@+id/accountTransferFrom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/to"
                    android:id="@+id/textView29"
                    android:layout_column="0"
                    android:textColor="@color/lloyds_lightergreen" />

                <Spinner
                    android:id="@+id/accountTransferTo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/transferAmount">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/amount"
                    android:id="@+id/transferFundsAmount"
                    android:layout_column="0"
                    android:textColor="@color/lloyds_darkgreen" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/amountToTransfer"
                    android:layout_column="1"
                    android:layout_marginBottom="20dp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/tag"
                    android:id="@+id/textView30"
                    android:layout_column="0" />

                <Spinner
                    android:id="@+id/tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/tags"
                    android:layout_marginBottom="10dp" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/textView31"
                    android:layout_column="1"
                    android:textColor="@color/lloyds_lightgreen"
                    android:text="@string/tag_appear" />
            </TableRow>
        </TableLayout>
    </view>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/lloyds_lightergreen_transparent"
        android:padding="10dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tran_continue"
            android:id="@+id/continueTransfer"
            android:layout_row="0"
            android:layout_column="3"
            android:background="#ffffffff"
            android:layout_marginBottom="10dp"
            android:textColor="@color/lloyds_acc_info_green_button" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tran_cancel"
            android:id="@+id/cancelTransfer"
            android:layout_row="1"
            android:layout_column="3"
            android:background="@color/lloyds_acc_info_green_button"
            android:textColor="#ffffffff" />
    </GridLayout>
    </LinearLayout>
</ScrollView>
